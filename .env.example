# -------------------------
# FastAPI / App Settings
# -------------------------
APP_NAME=Email Queue Service
APP_ENV=development
APP_DEBUG=True
APP_HOST=0.0.0.0
APP_PORT=8000

# -------------------------
# RabbitMQ Settings
# -------------------------
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Optional: queue names
EMAIL_QUEUE_HIGH=email.high
EMAIL_QUEUE_NORMAL=email.normal
EMAIL_QUEUE_BULK=email.bulk

# -------------------------
# SMTP Settings
# -------------------------
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=no-reply@example.com

# -------------------------
# PostgreSQL Settings
# -------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=email_queue_db
POSTGRES_USER=email_user
POSTGRES_PASSWORD=email_password
DATABASE_URL=postgresql+psycopg2://email_user:email_password@localhost:5432/email_queue_db

# -------------------------
# Retry limits for failed emails
MAX_RETRIES=5
RETRY_DELAY_SECONDS=30
